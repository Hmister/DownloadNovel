<Window x:Class="DownloadNovel.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DownloadNovel"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:extension="clr-namespace:HandyControl.Tools.Extension;assembly=HandyControl"
        xmlns:data="clr-namespace:HandyControl.Data;assembly=HandyControl"
        mc:Ignorable="d"
        Title="Window1" Height="500" Width="580">
    <StackPanel Margin="20">

        <DockPanel Margin="0,16,0,0" LastChildFill="True">
            <Button Command="{Binding SendNotificationCmd}" Content="发送" DockPanel.Dock="Right" HorizontalAlignment="Stretch" Margin="10,0,0,0" Click="Button_Click"/>
            <TextBox Text="{Binding Content}"/>
        </DockPanel>
        <hc:NotifyIcon Token="mess" Text="HandyControl" IsBlink="{Binding ContextMenuIsBlink}" Visibility="{Binding ContextMenuIsShow,Converter={StaticResource Boolean2VisibilityConverter}}">
          
        </hc:NotifyIcon>
    </StackPanel>
</Window>
